#!/usr/bin/env node

require('babel-register');

const db = require('sequelize-connect')
const path = require('path')
const app = require('../app.js').default
const config = require('config')

db.logger.level = null
db.matcher = () => true
db.discover = [path.join(__dirname, '../models')]

db.connect(
  config.database,
  config.username,
  config.password, {
  force: true
}).then(function() {
  app.listen(3000)
})
